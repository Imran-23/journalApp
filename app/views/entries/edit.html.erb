<div class="container">
  <div class="card border-0 shadow-lg">
    <div class="card-body p-5">
      <h1 class="fw-light text-center mb-4">Edit Entry</h1>
      <%= form_for(@entry, url: entry_path(@entry), method: :put, class: "row g-3") do |form| %>
        <div class="col-md-8 offset-md-2">
          <div class="mb-3">
            <%= form.label :name, class: "form-label fw-bold" %>
            <%= form.text_field :name, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :link, class: "form-label fw-bold" %>
            <%= form.text_field :link, class: "form-control" %>
          </div>
          <div class="mb-3">
            <%= form.label :description, class: "form-label fw-bold" %>
            <%= form.text_field :descriptions, class: "form-control" %>
          </div>
          <div class="d-grid gap-2">
            <%= form.submit "Update Entry", class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="mx-auto font-weight-bold" style="width: 200px; padding-top: 25px;" >
  <h1>All Entries</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Link</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td>
          <%=entry.id%>
        </td>
        <td>
          <%=entry.name%>
        </td>
        <td>
          <%=entry.link%>
        </td>
        <td>
          <%= button_to "Delete", entry, method: :delete, data: { confirm: "Are you sure you want to delete this Project ?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>